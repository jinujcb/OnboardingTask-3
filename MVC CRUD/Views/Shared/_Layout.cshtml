<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Onboarding Task -2</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand" href="#" style="color:white">Keys-Onboarding</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/Customer/Index" style="color:white">Customer <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Products/Index" style="color:white">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Store/Index" style="color:white">Store</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Sales/Index" style="color:white">Sales</a>
                </li>
            </ul>
        </div>
    </nav>@*Bootstrap 4 navbar*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Onboarding Task -3 </p>
        </footer>
    </div>

    @Styles.Render("~/Content/css");
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/moment")
    @RenderSection("scripts", required: false)
</body>
</html>
